<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/products.css">
    <title>Listado de Productos</title>
</head>
<body>

<h1>游닍 Listado de Productos</h1>

<!-- Input para ir al carrito -->
<div class="cart-navigation">
    <input type="text" id="cartId" placeholder="Ingrese ID de carrito" />
    <button id="goToCartBtn" class="btn">游 Ir al carrito</button>
</div>

<div class="productContainer">
    {{#each productos}}
        <div class="productCard">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p><strong>Precio:</strong> ${{this.price}}</p>
            <p><strong>Categor칤a:</strong> {{this.category}}</p>
            
            <!-- Bot칩n para ver detalles -->
            <a href="/products/{{this._id}}" class="btn btn-primary">游댌 Ver detalles</a>
        </div>
    {{/each}}
</div>

<!-- Navegaci칩n de Paginaci칩n -->
<div class="pagination">
    {{#if hasPrevPage}}
        <a href="?page={{prevPage}}" class="btn">拘勇 Anterior</a>
    {{/if}}
    <span>P치gina {{page}} de {{totalPages}}</span>
    {{#if hasNextPage}}
        <a href="?page={{nextPage}}" class="btn">俱뫮잺 Siguiente</a>
    {{/if}}
</div>

<script>
document.getElementById('goToCartBtn').addEventListener('click', () => {
    const cartId = document.getElementById('cartId').value.trim();
    if (cartId) {
        window.location.href = `/carts/${cartId}`;
    } else {
        alert('Por favor, ingrese un ID de carrito v치lido.');
    }
});
</script>

</body>
</html>


